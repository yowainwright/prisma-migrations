{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "//#build-lib": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"]
    },
    "lint-lib": {
      "inputs": ["src/**/*.{tsx,ts}", "tests/**/*.ts"]
    },
    "//#lint-lib": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test-lib": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "//#test-lib": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}