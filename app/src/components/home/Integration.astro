---
import { resolveDocsUrl } from "../../utils/urlResolver";
import PackageManagerIcons from "./PackageManagerIcons";

const packageManagers = [
  {
    name: "npm",
    url: "https://www.npmjs.com/",
    icon: "npm" as const,
  },
  {
    name: "yarn",
    url: "https://yarnpkg.com/",
    icon: "yarn" as const,
  },
  {
    name: "pnpm",
    url: "https://pnpm.io/",
    icon: "pnpm" as const,
  },
  {
    name: "bun",
    url: "https://bun.sh/",
    icon: "bun" as const,
  },
];
---

<div class="xl:flex xl:flex-row-reverse py-12 sm:py-16 lg:py-20 gap-8 lg:gap-16 xl:gap-28 px-4 sm:px-6 lg:px-8">
  <div class="xl:max-w-xl flex flex-col justify-center">
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black leading-tight">
      Works With All Major <span class="gradient-text"
        >Package Managers
      </span>
    </h1>

    <p class="mt-4 sm:mt-6 text-base">
      Prisma Migrations works seamlessly with npm, yarn, pnpm, and bun package managers.
    </p>

    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mt-6 sm:mt-8">
      <a href={resolveDocsUrl("setup")} class="w-full sm:w-auto">
        <button class="btn text-base px-6 py-3 h-14 whitespace-nowrap text-white border-0 shadow-none outline-none hover:opacity-90 w-full sm:w-auto gradient-bg"> Get started </button>
      </a>

      <a href={resolveDocsUrl("workspaces")} class="w-full sm:w-auto">
        <button class="btn text-base px-6 py-3 h-14 whitespace-nowrap btn-outline border-0 shadow-none outline-none hover:bg-primary/10 w-full sm:w-auto"> See examples </button>
      </a>
    </div>
  </div>

  <PackageManagerIcons packageManagers={packageManagers} client:load />
</div>
